# Hybrid RAG Orchestrator - Environment Variables Template
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요
# cp env.example .env

# ========================================================================
# 기본 설정
# ========================================================================
APP_NAME=SMART-RAG
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# ========================================================================
# 서버 설정
# ========================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ========================================================================
# Ollama LLM 설정
# ========================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=60
OLLAMA_MAX_TOKENS=4096
OLLAMA_TEMPERATURE=0.7

# ========================================================================
# Google Search API (필수 - 실제 값으로 변경 필요!)
# ========================================================================
# Google Custom Search API: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here
# Programmable Search Engine: https://programmablesearchengine.google.com/
GOOGLE_CSE_ID=your_custom_search_engine_id_here
GOOGLE_MAX_RESULTS=10
GOOGLE_TIMEOUT=10

# ========================================================================
# ChromaDB 벡터 저장소
# ========================================================================
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION=smart_rag_documents
CHROMA_DISTANCE_THRESHOLD=0.5
CHROMA_MAX_RESULTS=10

# ========================================================================
# 임베딩 모델 설정
# ========================================================================
EMBEDDING_MODEL=jhgan/ko-sbert-nli
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_LENGTH=512
EMBEDDING_CACHE_DIR=./data/embeddings_cache
EMBEDDING_ENABLE_CACHE=true
EMBEDDING_NORMALIZE_VECTORS=true

# ========================================================================
# MCP 서버 설정 (Model Context Protocol)
# ========================================================================
MCP_WEBSOCKET_URL=ws://localhost:8765/ws
MCP_JSON_RPC=2.0
MCP_METHOD=tools/call
MCP_TIMEOUT=10
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1
MCP_PING_INTERVAL=30
MCP_PING_TIMEOUT=10
MCP_CLOSE_TIMEOUT=5

# ========================================================================
# RAG 설정
# ========================================================================
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=100
RAG_SIMILARITY_THRESHOLD=0.5
RAG_MAX_CONTEXT_LENGTH=1000
RAG_PDF_TEMP_DIR=./data/pdf_temp

# ========================================================================
# 로깅 설정
# ========================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/smart_rag.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================================================================
# 캐시 설정
# ========================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_DIR=./data/cache

# ========================================================================
# 성능 설정
# ========================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# ========================================================================
# 보안 설정
# ========================================================================
SECRET_KEY=change-this-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
PDF_MAX_SIZE_MB=50
